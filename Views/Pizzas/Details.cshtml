@model PizzeriaApp.Models.Pizza

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-white text-center">Dettagli</h1>

<div class="">
    <h4 class="text-white">Da fare:</h4>
    <hr />
    <dl class="row text-white">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           Descrizione
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Importanza
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Note particolari
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ingredients)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Modifica</a> |
    <a asp-action="Index">Indietro</a>
</div>
